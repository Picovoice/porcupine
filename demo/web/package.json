{
  "name": "porcupine-web-demo",
  "version": "2.1.0",
  "description": "A basic demo to show how to use Porcupine for web browsers, using the IIFE version of the library",
  "main": "index.js",
  "private": true,
  "scripts": {
    "postinstall": "npx pvbase64 -i ../../lib/common/porcupine_params.pv -o ./porcupine_params.js && ncp ../../resources/keyword_files/wasm/porcupine_wasm.ppn ./porcupine_wasm.ppn",
    "start": "http-server -a localhost -p 5000"
  },
  "keywords": [
    "Picovoice",
    "Porcupine",
    "browser",
    "voice ai",
    "speech recognition"
  ],
  "author": "Picovoice Inc",
  "license": "Apache-2.0",
  "dependencies": {
    "@picovoice/porcupine-web": "^2.1.15",
    "@picovoice/web-voice-processor": "~4.0.2"
  },
  "devDependencies": {
    "http-server": "^14.0.0",
    "ncp": "^2.0.0"
  }
}
