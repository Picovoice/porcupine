    "**/Cargo.toml",

    // unity
    "**/*.meta",
    "**/*.unity",
    "../../demo/unity/images/image_attribution.md",
    "**/*.asset",
    "**/manifest.json",

    // 3rd party
    "../../demo/respeaker/ppnrespeakerdemo/apa102.py",
