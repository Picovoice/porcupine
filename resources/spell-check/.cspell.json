    "../../demo/mcu/**/stm32*",
    "../../demo/mcu/**/system*",
    "../../demo/mcu/**/syscalls.c",
    "../../demo/mcu/imxrt1050/imxrt1050-evkb/{board,CMSIS,codec,component,device,drivers,startup,utilities,xip}/**/*",
